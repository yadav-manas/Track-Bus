<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminLoginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".Admin_Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="SmartBus"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000" />



    <!-- Bus Icon in Circle -->


    <!-- Admin Login Heading -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bus_logo2" />

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Student Login"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000" />
    <!-- Email -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email Address"
            android:drawableStart="@drawable/envelope_24"
            android:drawablePadding="12dp"
            android:background="@drawable/edittext_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="#999999"
            />

    </androidx.cardview.widget.CardView>

    <!-- Password -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:drawableStart="@drawable/lock_24"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:textColorHint="#999999"/>
    </androidx.cardview.widget.CardView>


    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007BFF" />

    <!-- Forgot Password -->


    <!-- Footer Text -->
    <TextView
        android:id="@+id/footerNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        android:text="SmartBus Student Access Only"
        android:textColor="#070707"
        android:textSize="18sp" />
</LinearLayout>
