<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D47A1"
    android:padding="24dp">

    <!-- Header with logo + title -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_alignParentTop="true"
        android:background="#0A377C">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/title"
            android:src="@drawable/bt__logo"
            android:elevation="8dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartBus"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:shadowColor="#AA000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/driverLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Login"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:shadowColor="#33000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <EditText
                android:id="@+id/busIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Bus ID"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:layout_marginBottom="24dp"
                android:elevation="4dp" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3F51B5"
                android:textStyle="bold"
                android:padding="12dp"
                android:elevation="10dp"
                android:stateListAnimator="@null" />

            <TextView
                android:id="@+id/forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:shadowColor="#44000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
