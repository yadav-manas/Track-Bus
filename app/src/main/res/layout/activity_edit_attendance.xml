<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D4CAB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D4CAB"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartBus"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_small_left"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/screen_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Attendance"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />

<!--        <ImageButton-->
<!--            android:id="@+id/settings"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:src="@drawable/settings"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_marginEnd="10dp" />-->
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/datePickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="4dp"
                >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 01/07/2025"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingEnd="8dp" />

                <ImageView
                    android:id="@+id/calendarIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar_lines_pen_svgrepo_com"
                    app:tint="#333" />
            </LinearLayout>

            <TextView
                android:id="@+id/route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number: 5"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_students"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9"
                android:elevation="2dp"
                android:visibility="gone"
                android:clipToPadding="false"
                android:padding="4dp" />

            <Button
                android:id="@+id/savechanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0D4CAB"
                android:visibility="gone"
                android:textStyle="bold"
                android:padding="12dp"
                android:elevation="10dp"
                 />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
